{
    "compilerOptions": {
        "target": "ES2021",
        "module": "commonjs",
        "outDir": "./build/",
        "rootDir": "./src/",
        "strict": true,
        "typeRoots": ["node_modules/@types"],
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true
    },
    "exclude": ["build", "**/*.md"]
}
